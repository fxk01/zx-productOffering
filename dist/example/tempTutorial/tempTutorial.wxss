    padding:0 36rpx;
}


.design_conTitBox{
    padding-top: 36rpx;
}

.design_conTitBox .design_conTit{
    display: inline-block;
    padding-left: 20rpx;
    margin-bottom: 24rpx;
    color: #5993f5;
    font-weight: 500;
    font-size: 40rpx;
    letter-spacing: 2rpx;
    border-left: 4rpx solid #ff0826;
}

.design_mess{
