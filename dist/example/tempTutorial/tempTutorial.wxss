}

.torialRig .torialTxt{
    line-height: 46rpx;
    font-size: 24rpx;
    color:#909090;
}

.torialLine{
    width:83%;
    margin:0 auto;
    height: 2rpx;
    background-color: #f0f0f0;
}

.themess{
    padding-left: 100rpx;
    padding-top:44rpx;
    /*text-align: center;*/
