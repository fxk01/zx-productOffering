@import "../template/jMheader/jMheader.wxss";
.container{
    background-color:#fff;
}

.jm_header .jm_headTxt {
    font-weight:500;
    color:#323232;
    font-size:30rpx;
}

.container .content{
    margin-bottom: 60rpx;
}

.torialBox{
    padding:46rpx 30rpx 0;
}

.torialLimg{
    width:70rpx;
    height: 70rpx;
    color: #fff;
    font-size: 36rpx;
    line-height: 70rpx;
    text-align: center;
    border-radius: 50%;
}

.torialLimg_yellow{
    background-color:#ffc600;
}

.torialLimg_red{
    background-color:#ff0000;
}

.torialLimg_blue{
    background-color:#0084e5;
}

.torialLimg_cyan{
    background-color:#92d050;
}

.torialBox .torialRig{
    padding:0 24rpx 20rpx;
}

.torialRig .torialTitle{
    min-height: 60rpx;
    font-size: 40rpx;
