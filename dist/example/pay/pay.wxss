.orderInfoWrap{
    letter-spacing: 1rpx;
    font-size: 28rpx;
    color: #717171;
    min-height: 100vh;
    padding: 0 20rpx;
    background-color: #eeeeee;
}

.orderInfo_title{
    font-weight: bold;
    font-size: 32rpx;
    line-height:100rpx;
}

.orderInfo_box{
    border-radius: 14rpx;
    border: 2rpx solid #e8e8e8;
    padding: 30rpx 20rpx;
    background-color: #fff;
}

.orderInfo_branch{
    line-height: 48rpx;
    overflow:hidden ;
}

.branchName{
    font-weight: bold;
    float: left;
}

.branchValue{
    font-size: 26rpx;
    float: right;
}

.dir_account{
    border-top-left-radius:14rpx;
    position: relative;
    text-align: center;
    background-color: #fff;
    border: 2rpx solid #e8e8e8;
    width: 120rpx;
    padding: 24rpx 30rpx 10rpx 30rpx;
    border-top-right-radius: 14rpx;
}

.dir_account:after{
    position: absolute;
    left:2rpx;
    content: "";
    width: 178rpx;
    height: 4rpx;
    background: #fff;
    left: 0;
    bottom: -2rpx;
}

.btnBox{
    border-bottom-left-radius:14rpx;
    border-bottom-right-radius:14rpx;
    border-top-right-radius:14rpx;
    border: 2rpx solid #f8f8f8;
    background-color: #fff;
    padding: 24rpx 20rpx 28rpx;
}

.btnBox .payBtn{
    letter-spacing:2rpx;
    height: 110rpx;
    line-height: 110rpx;
    width: 100%;
    font-size: 34rpx;
    color: #fff;
    background-color: #449d46;
}

.helpView{
    line-height: 80rpx;
    text-align: center;
    color: #81a3b9 ;
}

/*购买成功、失败*/
.successBox,.loserBox{
    width: 100%;
    height: 100vh;
    background-color: #f1f1f1;
    text-align: center;
}

.successBox .success_Result{
    padding: 96rpx 0 80rpx;
    background-color: #fff;
}

.success_Result .result_Img{
    margin-bottom: 10rpx;
    width: 222rpx;
    height: 204rpx;
}

.success_Result .result_Txt{
    font-weight: bold;
    font-size: 42rpx;
    color: #ff6417;
}

.resultBtn{
    height: 110rpx;
    line-height: 110rpx;
    margin: 34rpx 30rpx 0;
    font-size: 34rpx;
    color: #fff;
    background-color: #3088ff;
}

.loserBox .loser_Result{
    padding: 70rpx 0 108rpx;
    background-color: #fff;
}

.loser_Result .result_loser_Img{
    margin-bottom: 20rpx;
    width: 190rpx;
    height: 190rpx;
}

.payLoser{
    background-color: #ff6417;
}

.loser_Result .result_Txt{
    font-weight: bold;
    font-size: 42rpx;
    color: #ff6417;
}

.backBtn{
    color: #5d5d5d;
    background-color: #e5e5e5;
}
